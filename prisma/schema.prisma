generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pet {
  id         String    @id @default(uuid())
  name       String
  birth_date DateTime?
  size       Float
  org_id     String
  org        Org       @relation(fields: [org_id], references: [id])

  @@map("pets")
}

model Org {
  id            String  @id @default(uuid())
  name          String
  email         String  @unique
  password_hash String
  latitude      Decimal
  longitude     Decimal
  Pet           Pet[]

  @@map("orgs")
}
